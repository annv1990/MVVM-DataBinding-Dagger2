        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".ui.splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.MainActivity" />
        <activity android:name=".ui.blog.BlogActivity" />
        <activity android:name=".ui.opensource.OpenSourceActivity" />
        <activity android:name=".ui.home.HomeActivity" />
        <activity
            android:name=".menu.Main2Activity"
            android:label="@string/title_activity_main2"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity android:name=".ui.scanner.ScannerActivity" />

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="c22e0e96774f2aaaa5f5116217600011354cf570" />
