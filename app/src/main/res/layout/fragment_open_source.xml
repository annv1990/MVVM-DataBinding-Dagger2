<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="opensourceFragmentViewModel"
            type="com.ajs.simplemvvm.ui.opensource.fragment.OpenSourceFragmentViewModel" />

    </data>

    <RelativeLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.opensource.OpenSourceActivity">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="Fragment Open Source" />

        <android.support.v7.widget.RecyclerView
            android:padding="5dp"
            android:id="@+id/rvOpenSource"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvTitle" />
    </RelativeLayout>

</layout>